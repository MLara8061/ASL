---
interface Props {
  id?: string;
}

const { id = 'testimonial' } = Astro.props;
---

<section id={id} class="relative py-12 sm:py-16 lg:py-20 overflow-hidden bg-gray-50">
  <!-- Patrón de puntos de fondo -->
  <div class="absolute inset-0 pointer-events-none overflow-hidden">
    <div 
      class="absolute w-full h-full bg-cover bg-center bg-no-repeat" 
      style="background-image: url('/ia-background-dots.webp'); opacity: 0.08;"
    ></div>
  </div>

  <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid lg:grid-cols-2 gap-6 sm:gap-8 lg:gap-12 items-center max-w-6xl mx-auto">
      <!-- Imagen de la directora -->
      <div class="relative px-2 sm:px-4 lg:px-0">
        <!-- Elemento decorativo rojo superior -->
        <div class="hidden sm:block absolute -top-4 sm:-top-8 -left-4 sm:-left-8 w-32 sm:w-48 lg:w-64 h-32 sm:h-48 lg:h-64 bg-[#EF4444] opacity-80 rounded-tl-[50px] sm:rounded-tl-[80px] lg:rounded-tl-[100px]"></div>
        <!-- Elemento decorativo azul inferior -->
        <div class="hidden sm:block absolute -bottom-8 sm:-bottom-12 lg:-bottom-16 -right-4 sm:-right-8 lg:-right-0 w-48 sm:w-64 lg:w-96 h-48 sm:h-64 lg:h-96 bg-gradient-to-br from-[#003366] to-[#0052A3] rounded-br-[80px] sm:rounded-br-[120px] lg:rounded-br-[150px] z-0"></div>
        
        <!-- Imagen -->
        <div class="relative z-10">
          <img
            src="/perla-mercado.png"
            alt="Lic. Perla Mercado - Directora ASL"
            class="w-full max-w-sm sm:max-w-md mx-auto rounded-lg shadow-2xl"
          />
        </div>
      </div>

      <!-- Contenido del testimonio -->
      <div class="space-y-4 sm:space-y-6 lg:space-y-8 px-2 sm:px-4 lg:px-0">
        <div>
          <h3 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold text-[#0052A3] mb-3 sm:mb-4 lg:mb-6">
            ¡Nos emociona verte triunfar!
          </h3>
          <div class="space-y-3 sm:space-y-4 text-sm sm:text-base lg:text-lg text-gray-700 leading-relaxed">
            <p>
              SI TIENES ALGUNA PREGUNTA SOBRE EL PROGRAMA, MANDA UN MENSAJE A
            </p>
          </div>
        </div>

        <!-- Logo y contacto -->
        <div class="flex flex-col sm:flex-row items-center sm:space-x-6 space-y-3 sm:space-y-0">
          <img
            src="/logo-asl.png"
            alt="ASL Logo"
            class="h-12 sm:h-16 lg:h-20 w-auto"
          />
          <div class="flex-1 text-center sm:text-left">
            <p class="text-xs sm:text-sm lg:text-base font-medium text-gray-900">
              ACERCANDO SOLUCIONES LABORALES
            </p>
          </div>
        </div>

        <!-- Botones de contacto -->
        <div class="space-y-3 sm:space-y-4">
          <a
            href="mailto:info@acercandosoluciones.com"
            class="flex items-center justify-center space-x-2 sm:space-x-3 bg-gray-100 hover:bg-gray-200 text-gray-800 font-medium px-4 sm:px-8 py-3 sm:py-4 rounded-full transition-colors shadow-md text-sm sm:text-base"
          >
            <svg class="w-5 h-5 sm:w-6 sm:h-6 text-blue-600" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/>
            </svg>
            <span class="break-all sm:break-normal">info@acercandosoluciones.com</span>
          </a>

          <div class="text-center">
            <p class="text-gray-600 mb-2 text-sm sm:text-base">o llámanos al</p>
            <a
              href="tel:+529982234097"
              class="flex items-center justify-center space-x-2 sm:space-x-3 bg-white hover:bg-gray-50 border-2 border-gray-300 text-gray-800 font-bold px-4 sm:px-8 py-3 sm:py-4 rounded-full transition-colors shadow-md text-sm sm:text-base"
            >
              <svg class="w-6 h-6 text-blue-600" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.01 15.38c-1.23 0-2.42-.2-3.53-.56-.35-.12-.74-.03-1.01.24l-1.57 1.97c-2.83-1.35-5.48-3.9-6.89-6.83l1.95-1.66c.27-.28.35-.67.24-1.02-.37-1.11-.56-2.3-.56-3.53 0-.54-.45-.99-.99-.99H4.19C3.65 3 3 3.24 3 3.99 3 13.28 10.73 21 20.01 21c.71 0 .99-.63.99-1.18v-3.45c0-.54-.45-.99-.99-.99z"/>
              </svg>
              <span>998 223 4097</span>
            </a>
          </div>
        </div>

        <!-- Redes sociales -->
        <div class="pt-6 border-t border-gray-200">
          <p class="text-sm text-gray-600 font-medium mb-2">SÍGUENOS EN:</p>
          <div class="space-y-1 text-sm">
            <p class="text-gray-700">
              <span class="font-semibold">FACEBOOK:</span> 
              <a href="https://www.facebook.com/AcercandoCapacitacion?locale=es_LA" target="_blank" rel="noopener noreferrer" class="text-blue-600 hover:text-blue-800 hover:underline">
                ACERCANDO CAPACITACIÓN
              </a>
            </p>
            <p class="text-gray-700">
              <span class="font-semibold">INSTAGRAM:</span> 
              <a href="https://www.instagram.com/acercandomx?igsh=YWdvZHp3YXJ0aG5p&utm_source=qr" target="_blank" rel="noopener noreferrer" class="text-blue-600 hover:text-blue-800 hover:underline">
                ACERCANDOMX
              </a>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
