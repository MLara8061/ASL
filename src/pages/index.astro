---
import Layout from '~/layouts/PageLayout.astro';

import HeroSlider from '~/components/widgets/HeroSlider.astro';
import ServicesGrid from '~/components/widgets/ServicesGrid.astro';
import IASection from '~/components/widgets/IASection.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import GoogleReviews from '~/components/widgets/GoogleReviews.astro';
import TestimonialDirector from '~/components/widgets/TestimonialDirector.astro';

// Importar imágenes (usando rutas públicas para HEIC que no Astro no soporta)
import img003 from '~/assets/images/slider/003.jpeg';
import img004 from '~/assets/images/slider/004.jpeg';
import img005 from '~/assets/images/slider/005.jpeg';
import img007 from '~/assets/images/slider/007.jpeg';
import logoASL from '~/assets/images/slider/LOGO.ASL.png';
import logoLaboral from '~/assets/images/slider/LOGO laboral.png';
import logoCapacitacion from '~/assets/images/slider/logo_capacitacion.png';

const metadata = {
  title: 'ASL - Consultora de RRHH & Tecnología | Soluciones en IA para Empresas',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Slider ******************* -->

  <HeroSlider
    slides={[
      {
        title: 'Empresa Consultora en <span class="text-[#EF4444]">Recursos Humanos & Tecnología</span>',
        subtitle:
          'Acompañamos a tu empresa con consultoría legal, gestión de personal y capacitación de alto nivel con enfoque en Inteligencia Artificial.',
        image: { src: '/hero-003.jpeg', alt: 'Equipo Corporativo ASL' },
        actions: [
          {
            variant: 'primary',
            text: 'Agendar Diagnóstico',
            href: '#contacto',
          },
          { text: 'Conocer Servicios', href: '#servicios' },
        ],
      },
      {
        title: 'Especialistas en <span class="text-[#EF4444]">RRHH y Capacitación</span>',
        subtitle:
          'Más de 15 años de experiencia acompañando a empresas en su transformación digital y desarrollo del talento.',
        image: { src: '/hero-004.jpeg', alt: 'Equipo de Expertos' },
        actions: [
          {
            variant: 'primary',
            text: 'Explorar Servicios',
            href: '#servicios',
          },
          { text: 'Ver Cursos', href: '#cursos' },
        ],
      },
      {
        title: 'Capacitación con <span class="text-[#EF4444]">Inteligencia Artificial</span>',
        subtitle:
          'Prepara a tu equipo para adaptarse a los nuevos modelos de negocio y la automatización inteligente.',
        image: { src: '/hero-005.jpeg', alt: 'Capacitación IA' },
        actions: [
          {
            variant: 'primary',
            text: 'Conocer Programas',
            href: '#ia',
          },
          { text: 'Contactar', href: '#contacto' },
        ],
      },
    ]}
    autoplay={true}
    autoplayDelay={5000}
  />

  <!-- Servicios Section ******************* -->

  <ServicesGrid
    id="servicios"
    title="Nuestros Servicios"
    subtitle="Soluciones especializadas diseñadas para tu empresa"
    tagline="Servicios Principales"
    services={[
      {
        title: 'ACERCANDO CONSULTORÍA',
        description:
          'Consultoría integral en Recursos Humanos orientada al diagnóstico, diseño y mejora de procesos clave como reclutamiento, selección, capacitación y evaluación del desempeño.',
        image: { src: 'https://images.unsplash.com/photo-1552664730-d307ca884978?w=800&q=80', alt: 'Equipo de Consultoría' },
      },
      {
        title: 'ACERCANDO ASESORÍA LABORAL',
        description:
          'Asesoría legal laboral preventiva y correctiva, enfocada en el cumplimiento de legislación, contratos, reglamentos internos y reducción de riesgos legales.',
        image: { src: 'https://images.unsplash.com/photo-1589829545856-d10d557cf95f?w=800&q=80', alt: 'Documentos Legales' },
      },
      {
        title: 'ACERCANDO CAPACITACIÓN',
        description:
          'Capacitación empresarial especializada en Recursos Humanos, derecho laboral y habilidades directivas, con enfoque en Inteligencia Artificial.',
        image: { src: 'https://images.unsplash.com/photo-1524178232363-1fb2b075b655?w=800&q=80', alt: 'Capacitación Profesional' },
      },
    ]}
  />

  <!-- IA Section ******************* -->

  <IASection
    id="ia"
    title="Capacitación con Inteligencia Artificial"
    images={[
      { src: img003, alt: 'Taller IA 1' },
      { src: img004, alt: 'Taller IA 2' },
      { src: img005, alt: 'Taller IA 3' },
      { src: img007, alt: 'Taller IA 4' },
    ]}
  />

  <!-- Cursos Section ******************* -->

  <FAQs
    id="cursos"
    title="LISTA DE CURSOS DISPONIBLES"
    subtitle="Todos nuestros instructores son profesionales en activo en sus áreas de especialidad"
    tagline="Catálogo de Capacitación"
    items={[
      {
        title: 'CURSOS DE INTELIGENCIA ARTIFICIAL',
        description:
          'IA para Recursos Humanos • IA para Elaboración de Cursos de Capacitación • IA para Principiantes • IA para Sector Inmobiliario • IA para Abogados • Segmentación Inteligente en Facebook Ads • Manejo de Marca Personal',
      },
      {
        title: 'CURSOS LABORALES',
        description:
          'Cómo Prevenir Demandas Laborales • Actas Administrativas • Derecho Laboral para Recursos Humanos • Derecho Laboral para PyMES • Elaboración de Expediente Laboral para Empresas',
      },
      {
        title: 'CURSOS DE LIDERAZGO Y MOTIVACIÓN',
        description:
          'Liderazgo con Inteligencia Emocional • Equipos de Alto Desempeño • Comunicación Efectiva y Manejo de Conflictos Laborales • Cultura Laboral y Sentido de Pertenencia',
      },
      {
        title: 'MODALIDADES DISPONIBLES',
        description:
          'Todos nuestros programas pueden personalizarse por área, puesto o sector, en modalidad presencial o vía Zoom. Solicita información sobre cursos diseñados a medida para tu empresa.',
      },
    ]}
  />

  <!-- Testimonial / Leadership Section ******************* -->

  <TestimonialDirector />

  <!-- Google Reviews Section ******************* -->

  <GoogleReviews />
</Layout>
