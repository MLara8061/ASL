---
import Layout from '~/layouts/PageLayout.astro';

import HeroCliente from '~/components/widgets/HeroCliente.astro';
import ServicesCliente from '~/components/widgets/ServicesCliente.astro';
import IASection from '~/components/widgets/IASection.astro';
import CursosCliente from '~/components/widgets/CursosCliente.astro';
import GoogleReviews from '~/components/widgets/GoogleReviews.astro';
import TestimonialDirector from '~/components/widgets/TestimonialDirector.astro';

// Importar imágenes
import img003 from '~/assets/images/slider/003.jpeg';
import img004 from '~/assets/images/slider/004.jpeg';
import img005 from '~/assets/images/slider/005.jpeg';
import img007 from '~/assets/images/slider/007.jpeg';

const metadata = {
  title: 'ASL - Consultora de RRHH & Tecnología | Soluciones en IA para Empresas',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Section - Diseño del Cliente ******************* -->

  <HeroCliente />

  <!-- Servicios Section - Diseño del Cliente ******************* -->

  <ServicesCliente />

  <!-- IA Section ******************* -->

  <IASection
    id="ia"
    title="Capacitación con Inteligencia Artificial"
    images={[
      { src: img003, alt: 'Taller IA 1' },
      { src: img004, alt: 'Taller IA 2' },
      { src: img005, alt: 'Taller IA 3' },
      { src: img007, alt: 'Taller IA 4' },
    ]}
  />

  <!-- Cursos Section - Diseño del Cliente ******************* -->

  <CursosCliente />

  <!-- Testimonial / Leadership Section ******************* -->

  <TestimonialDirector />

  <!-- Google Reviews Section ******************* -->

  <GoogleReviews />
</Layout>
